extends layout

block content
  h1 #{title}

  form(method='POST' action='' enctype='multipart/form-data')
    div.form-group
      label(for='name') Title:
      input#title.form-control(type='text', name='title' value=(undefined===post ? '' : post.title))
    div.form-group
      label(for='content') Content:
      textarea#content.form-control(type='textarea', placeholder='Type your content here' name='content' rows='3') #{undefined===post ? '' : post.content}
    div.form-group
      label(for='image') Image:
      input#image.form-control(type='file' name='image') 
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg
